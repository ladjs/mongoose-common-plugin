{
  "name": "mongoose-common-plugin",
  "description": "Common plugin for Mongoose with standard schema fields and localization support",
  "version": "0.1.1",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "bugs": {
    "url": "https://github.com/ladjs/mongoose-common-plugin/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "@ladjs/mongoose-error-messages": "^0.0.3",
    "mongoose-json-select": "^0.2.1",
    "mongoose-omit-common-fields": "^0.0.4",
    "mongoose-unique-validator": "^2.0.3",
    "mongoose-validation-error-transform": "^0.0.2",
    "speakingurl": "^14.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "ava": "^2.3.0",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.1",
    "eslint": "^6.3.0",
    "eslint-config-xo-lass": "^1.0.3",
    "fixpack": "^2.3.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mongoose": "^5.6.12",
    "nyc": "^14.1.1",
    "remark-cli": "^7.0.0",
    "remark-preset-github": "^0.0.16",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/ladjs/mongoose-common-plugin",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "common",
    "created",
    "field",
    "helper",
    "i10n",
    "i18n",
    "id",
    "koa",
    "lad",
    "lass",
    "locale",
    "locales",
    "localization",
    "mongoose",
    "plugin",
    "schema",
    "timestamp",
    "updated",
    "virtual"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ],
    "package.json": [
      "fixpack",
      "git add"
    ]
  },
  "main": "index.js",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ladjs/mongoose-common-plugin"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ]
  }
}
